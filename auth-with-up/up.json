{
  "name": "pomodoro-auth",
  "cors": {
    "enable": true,
    "allowed_origins": ["https://pomodoro.cc", "https://beta.pomodoro.cc", "http://beta.pomodoro.cc", "https://app.pomodoro.cc", "http://localhost:9000"],
    "allowed_methods": ["HEAD", "GET", "POST", "PUT", "PATCH", "DELETE"],
    "allowed_headers": ["cookie", "with_credentials"]
  },
  "regions": ["eu-central-1"],
  "lambda": {
    "memory": 128
  },
  "stages": {
    "production": {
      "domain": "auth.pomodoro.cc"
    },
    "development": {
      "domain": "dev-auth.pomodoro.cc"
    }
  }
}
